             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Appflowershop.views.Exit">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="คุณต้องการออกจากระบบใช่ใหม?"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" Padding="0,2,0,0"/>
